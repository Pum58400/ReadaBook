<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wood"
        tools:context=".LibraryFragment">

        <TextView
            android:id="@+id/Title_text"
            android:layout_width="312dp"
            android:layout_height="74dp"
            android:layout_marginTop="40dp"
            android:text="Read a book"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/Book_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:src="@drawable/book1"
            app:layout_constraintBottom_toBottomOf="@+id/Book_image2"
            app:layout_constraintEnd_toStartOf="@+id/Book_image2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/Book_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:src="@drawable/book2"
            app:layout_constraintEnd_toStartOf="@+id/Book_image3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/Book_image1"
            app:layout_constraintTop_toBottomOf="@+id/Title_text" />

        <ImageButton
            android:id="@+id/Book_image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:src="@drawable/book3"
            app:layout_constraintBottom_toBottomOf="@+id/Book_image2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/Book_image2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


